#!/bin/bash

echo "Name of the new heroku app? [ENTER]:"
read newname

heroku apps:create $newname

git init
git remote add heroku git@heroku.com:$newname.git
git add -A
git commit -a -m "initial"
git push heroku master
heroku config:set ALLOWED_HOSTS="$newname.herokuapp.com" DEBUG=1 SECRET_KEY=`make_secret_key`
heroku run app/manage.py syncdb --all --noinput

echo "remember to set AWS credentials for file uploads, and turn DEBUG off"

